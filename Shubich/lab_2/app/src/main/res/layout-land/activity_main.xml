<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:background="@color/grey"
        android:textSize="40pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:gravity="right|center"
        android:layout_weight="1"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/buAC"
                android:onClick="clickAC"
                android:text="AC"
                android:textSize="10pt"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/orange"
            />
            <Button
                android:id="@+id/buPlusMinus"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="+/-"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/buDivide"
                android:onClick="operation"
                android:textSize="10pt"
                android:text="/"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/buMultiply"
                android:onClick="operation"
                android:textSize="10pt"
                android:text="*"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu7"
                android:layout_height="46dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="20pt"
                android:height="30pt"
                android:backgroundTint="@color/blue"
                android:onClick="ckickNumber"
                android:text="7"
                android:textSize="10pt" />

            <Button
                android:id="@+id/bu8"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="8"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/bu9"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="9"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/buPercent"
                android:onClick="clickPrecent"
                android:text="%"
                android:textSize="10pt"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bu4"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="4"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/bu5"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="5"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/bu6"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="6"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/buPlus"
                android:onClick="operation"
                android:textSize="10pt"
                android:text="+"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bu1"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="1"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/bu2"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="2"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/bu3"
                android:onClick="ckickNumber"
                android:textSize="10pt"
                android:text="3"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/buMinus"
                android:onClick="operation"
                android:textSize="10pt"
                android:text="-"
                android:height="20pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <Button
            android:id="@+id/bu0"
            android:onClick="ckickNumber"
            android:textSize="10pt"
            android:text="0"
            android:height="20pt"
            android:width="30pt"
            android:layout_weight="2"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/blue"
            />
        <Button
            android:id="@+id/buDot"
            android:onClick="ckickNumber"
            android:textSize="10pt"
            android:text="."
            android:height="20pt"
            android:width="30pt"
            android:layout_weight="3"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/blue"
            />
        <Button
            android:id="@+id/buEqual"
            android:onClick="ckickEqual"
            android:textSize="10pt"
            android:text="="
            android:height="20pt"
            android:width="30pt"
            android:layout_weight="3"
            android:layout_marginRight="1pt"
            android:backgroundTint="@color/blue"
            />
    </TableRow>

</LinearLayout>